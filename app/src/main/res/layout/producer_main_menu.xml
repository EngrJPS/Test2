<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".producer_main_menu"
    android:id="@+id/producerMainMenu">

    <Button
        android:id="@+id/producerMainAll"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/producerMainRecycle"
        android:layout_alignParentTop="true"
        android:text="All Products"
        android:textStyle="bold" />

    <Button
        android:id="@+id/producerMainMy"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/producerMainRecycle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/producerMainAll"
        android:text="My Products"
        android:textStyle="bold" />

    <Button
        android:id="@+id/producerMainPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/producerMainRecycle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/producerMainMy"
        android:text="Price"
        android:textSize="12sp" />

    <Button
        android:id="@+id/producerMainRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/producerMainRecycle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/producerMainPrice"
        android:text="Rating"
        android:textSize="12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/producerMainRecycle"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_alignParentBottom="true" />

    <ProgressBar
        android:id="@+id/producerMainProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@color/primaryColor"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/producerMainAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primaryColor"
        app:tint="@color/white" />

</RelativeLayout>